<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_redpakage_dialog">

    <RelativeLayout
        android:id="@+id/popup_anima"
        android:layout_width="300dp"
        android:layout_height="400dp"
        android:background="@drawable/bg_redpakage_dialog"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:background="@drawable/top_redpackage">

            <ImageView
                android:id="@+id/iv_cancel"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/redpackage_cancel"/>
            <TextView
                android:id="@+id/tv_tip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/titleRedpackage"
                android:textColor="@color/redtitleText"
                android:layout_marginTop="60dp"
                android:gravity="center"
                android:textSize="22sp"/>
            <TextView
                android:id="@+id/tv_collectionTime"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:gravity="center"
                android:text="@string/collectionTime"
                android:textSize="20sp"
                android:layout_marginTop="12dp"
                android:layout_below="@+id/tv_tip"
                android:layout_alignParentStart="true" />
        </RelativeLayout>
        <ImageView
            android:id="@+id/iv_open"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/redpackage_open"
            android:layout_marginBottom="80dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>
</RelativeLayout>